// Program that performs the quadratic formula on 3 inputted numbers

#include <iostream>
#include <cmath>

int main() {
  
  double a, b, c;
  double root1, root2;

  std::cout << "Enter a: ";
  std::cin >> a;
  std::cout << std::endl;
  
  std::cout << "Enter b: ";
  std::cin >> b;
  std::cout << std::endl;

  std::cout << "Enter c: ";
  std::cin >> c;
  std::cout << std::endl;

  root1 = (-b + std::sqrt(b*b - 4*a*c)) / (2*a);

  root2 = (-b - std::sqrt(b*b - 4*a*c)) / (2*a);

  std::cout << "Root 1 is " << root1 << "\n";
  std::cout << "Root 2 is " << root2 << "\n";
}
