// Basic password checking program testing user input vs stored data

#include <iostream>
using namespace std;

int main()
{
	string password = "hello";

	cout << "Enter your password: ";
	
	string input;
	cin >> input;

	if (input == password) {
    cout << "Password accepted.\n";
	}
  
	else {
		cout << "Incorrect password.\n";
	}
}
