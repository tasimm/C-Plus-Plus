// Practice program using different data types in arrays

#include <iostream>
using namespace std;

int main()
{
    cout << "Array of integers\n";
    cout << "==================\n";
    int values[3];

    values[0] = 88;
    values[1] = 123;
    values[2] = 77;

    cout << values[0] << endl;
    cout << values[1] << endl;
    cout << values[2] << endl;


    cout << "\n" << "Array of doubles\n";
    cout << "==================\n";

    double numbers[4] = { 4.5, 2.3, 7.2, 8.1 };

    for (int i = 0; i < 4; i++) {

        cout << "Element at index " << i << ": " << numbers[i] << endl;
    }


    cout << "\n" << "Array of strings\n";
    cout << "==================\n";

    string texts[] = { "apple", "banana", "orange" };

    for (int i = 0; i < 3; i++) {

        cout << "Element at index " << i << ": " << texts[i] << endl;
    }


    cout << "\n" << "Initializing with zero values\n";
    cout << "==================\n";

    int numberArray[8] = {};

    for (int i = 0; i < 8; i++) {

        cout << "Element at index " << i << ": " << numberArray[i] << endl;
    }
}
